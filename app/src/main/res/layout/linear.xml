<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:weightSum="3"
     android:layout_weight="1"
     android:layout_height="wrap_content">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:text="1"
         android:textColor="#FFDAB9"
         android:textSize="20dp"
         android:gravity="center"
         android:background="@color/colorAccent"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:background="#0000e6"
         android:gravity="center"
         android:text="2"
         android:textColor="#ffff"
         android:textSize="20dp" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:text="3"
         android:textColor="#ffff"
         android:textSize="20dp"
         android:background="#E91717"/>

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:gravity="center"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:background="#81FF33"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#ffff"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#336DFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#ffff"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#F3FF33"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#78281F"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#ffff"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#5EE917"
            android:gravity="center"
            android:text="9"
            android:textColor="#ffff"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>